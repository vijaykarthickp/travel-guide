<figure class="filters">
  <div class="filters-header">
    Filters
  </div>
  {{> filters-category label="Places to Stay" value="hotels" class="filters-check"}}
  {{> filters-category label="Food & Drinks" value="restaurants" class="filters-check"}}
  {{> filters-category label="What to See" value="events" class="filters-check"}}
  {{> filters-category label="Things to Do" value="things_todo" class="filters-check"}}
