    <hr style="width: 90%;">
  </div>
  {{> filters-category label="Spring" value="spring" class ="season-check"}}
  {{> filters-category label="Summer" value="summer" class ="season-check"}}
  {{> filters-category label="Autumn" value="autumn" class ="season-check" }}
  {{> filters-category label="Winter" value="winter" class ="season-check"}}
</figure>
