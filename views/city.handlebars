      <button class="header-account-menu">
        <span class="btn-label">
          <span class="nonArrangedUser">
            Hello, John
          </span>
          <i class="icon-toggle material-icons">
            keyboard_arrow_down
          </i>
        </span>
      </button>
    </section>
    <div id="header-parent">
      <section class="header" >
        <img class="bg-img" id="background-img" src="../../assets/img/nyc.jpg">
        <div class="city-title">
          <h1>New York City</h1>
        </div>
        {{> form }}
      </section>
    </div>
    <section class="content">
    <figure class="left-rail">
      {{> filters }}
      {{> lists }}
    </figure>
    {{#if data.hotels}}
      <figure class="tiles column">
        <div class="category"><h2>Hotels</h2></div>
          {{#each data.hotels}}
            {{> tiles data=this }}
          {{/each}}
        </figure>
    {{/if}}
    {{#if data.restaurants}}
      <figure class="tiles column">
        <div class="category"><h2>Food & Drinks</h2></div>
        {{#each data.restaurants}}
          {{> tiles data=this }}
        {{/each}}
      </figure>
    {{/if}}
    {{#if data.events}}
      <figure class="tiles column">
        <div class="category"><h2>What to See</h2></div>
        {{#each data.events}}
          {{> tiles data=this }}
        {{/each}}
      </figure>
    {{/if}}
    {{#if data.things-todo}}
      <figure class="tiles column">
        <div class="category"><h2>Things to Do</h2></div>
        {{#each data.things-todo}}
          {{> tiles data=this }}
        {{/each}}
      </figure>
    {{/if}}
    {{#if data.articles}}
      <figure class="tiles column">
        <div class="category"><h2>Related Articles</h2></div>
        {{#each data.articles}}
          {{> tiles data=this }}
        {{/each}}
      </figure>
    {{/if}}
  </section>
